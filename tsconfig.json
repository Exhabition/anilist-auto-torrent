{
    "compilerOptions": {
        "module": "CommonJS",
        "baseUrl": ".",
        "outDir": "dist",
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": false,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "noImplicitAny": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}